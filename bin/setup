#!/bin/bash

set -x

bin_dir=$(cd $(dirname $0) && pwd)
root_dir=$bin_dir/..
cd $root_dir
git submodule update -i

# setup frontend
cd $root_dir/frontend
cat src/agent.js | sed -e "s/'https.*\/api';/'http:\/\/localhost:3000\/api';/" | tee src/agent.js > /dev/null

# setup frontend
cd $root_dir/backend
git grep -l 'ActiveRecord::Migration$' db/migrate | xargs -I"%" bash -c "cat % | sed -e 's/ActiveRecord::Migration$/ActiveRecord::Migration[4.2]/g' | tee %" > /dev/null
cat Gemfile | sed -e "s/^gem 'devise',.*/gem 'devise'/" | tee Gemfile > /dev/null
cat config/secrets.yml | sed -e "s/localhost:3000/localhost:4100/" | tee config/secrets.yml > /dev/null

cat <<EOF > config/initializers/devise_controller.rb
Rails.application.config.to_prepare do
  DeviseController.respond_to :json
end
EOF
